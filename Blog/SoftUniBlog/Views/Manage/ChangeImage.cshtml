@model SoftUniBlog.Models.RegisterViewModel
@{
    ViewBag.Title = "Change Image";
}
<style>
    body {
        background-image: url('http://www.pixelstalk.net/wp-content/uploads/2016/06/HD-Wallpapers-Gif-Download.gif');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: 100%;
    }
</style>
<h2 style="color:rebeccapurple">@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeImage", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div style="color:rebeccapurple"class="form-group">
        @Html.LabelFor(m => m.UserPhoto, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">

            <input type="file" style ="color:rebeccapurple"name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Upload" />
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

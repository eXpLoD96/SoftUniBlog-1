@model List<EquipmentType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SoftUniBlog.Models

@{
    Category category = ViewBag.Category;
    ViewBag.Title = $"Equipment by type {category}";
}
<head>
    <title>Motivation</title>
</head>
<style>
    body {
        background-image: url('http://www.careandliving.com/wp-content/uploads/2016/08/muscular-guy-six-pack-HD.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }
</style>

@foreach (var equipmentType in Model)
{
    var type = equipmentType.Name;
    <li><a href="/Equipment/ByType/@type?category=@equipmentType.Category"><img src="@equipmentType.ImagePath" width="300" height="300" /><span>@equipmentType.Name</span></a></li>
}